<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerText"
        android:text="Register"
        android:textSize="70dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerEmailEntry"
        android:hint = "Enter email"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffffff"
        android:layout_marginTop = "20dp"
        android:layout_below = "@+id/registerText"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerUsernameEntry"
        android:hint = "Enter username"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffffff"
        android:layout_marginTop = "20dp"
        android:layout_below = "@+id/registerEmailEntry"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerFNameEntry"
        android:hint = "Enter first name"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffffff"
        android:layout_marginTop = "20dp"
        android:layout_below = "@+id/registerUsernameEntry"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerLNameEntry"
        android:hint = "Enter last name"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffffff"
        android:layout_marginTop = "20dp"
        android:layout_below = "@+id/registerFNameEntry"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerPasswordEntry"
        android:hint = "Enter Password"
        android:inputType="textPassword"
        android:ems="10"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffffff"
        android:layout_marginTop = "20dp"
        android:layout_below = "@+id/registerLNameEntry"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerConfirmPasswordEntry"
        android:hint = "Confirm password"
        android:inputType="textPassword"
        android:ems="10"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffffff"
        android:layout_marginTop = "20dp"
        android:layout_below = "@+id/registerPasswordEntry"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />
    
    <CheckBox
        android:id="@+id/therapistCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/registerConfirmPasswordEntry"
        android:layout_marginTop = "20dp"
        android:text="Therapist"
        android:textSize="35dp"
        />
    <CheckBox
        android:id="@+id/clientCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/therapistCheckbox"
        android:layout_marginTop = "20dp"
        android:text="Client"
        android:textSize="35dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="register"
        android:textSize="30dp"
        android:id="@+id/confirmRegistrationButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>