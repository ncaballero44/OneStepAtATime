<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:screenOrientation="portrait"
    tools:context=".TherapistSharedNoteTakingActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Title:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/titleTextShared" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notesTitleShared"
        android:maxLines="1"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_below="@+id/titleTextShared">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Notes:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/notesTitleShared"
        android:id="@+id/notesContentTextShared"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notesContentShared"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="top"
        android:layout_below="@+id/notesContentTextShared">
    </TextView>

</RelativeLayout>