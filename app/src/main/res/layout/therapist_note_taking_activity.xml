<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:screenOrientation="portrait"
    tools:context=".TherapistNoteTakingActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/saveNotesIconTherapist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        app:srcCompat="@mipmap/save_foreground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/saveNotesButtonTherapist"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/undoNotesIconTherapist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        app:srcCompat="@mipmap/undo_foreground"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/undoNotesButtonTherapist"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="7dp"
        android:alpha="0"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/shareNotesIconTherapist"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:srcCompat="@mipmap/share_foreground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/shareNotesButtonTherapist"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="7dp"
        android:alpha="0"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Title:"
        android:textColor="#000000"
        android:id="@+id/titleTextTherapist"
        android:textStyle="bold"
        android:layout_below="@+id/shareNotesIconTherapist"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notesTitleTherapist"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="25sp"
        android:textColor="#000000"
        android:hint = "Enter in a title here"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#000000"
        android:layout_below="@+id/titleTextTherapist">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Notes:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/notesTitleTherapist"
        android:id="@+id/notesContentTextTherapist"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notesContentTherapist"
        android:inputType="textMultiLine"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="top"
        android:hint = "Enter in some notes here"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#000000"
        android:layout_below="@+id/notesContentTextTherapist">
    </EditText>

</RelativeLayout>