<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientMainActivity"
    android:background="@android:color/white"
    android:screenOrientation="portrait" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeMessageClient"
        android:text="Welcome back \n"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonsListClient"
        app:layout_constraintVertical_bias="0.2"
        android:layout_below="@+id/welcomeMessageClient"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/calendarButtonClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Chat"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

<!--            <Button-->
<!--                android:id="@+id/journalButtonClient"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="#f71414"-->
<!--                android:gravity="center"-->
<!--                android:text="Journal"-->
<!--                android:textColor="#000000"-->
<!--                android:textSize="40sp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginBottom="10dp"/>-->

            <Button
                android:id="@+id/worksheetsButtonClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7f8efa"
                android:gravity="center"
                android:text="Worksheets"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/notesJournalButtonClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8ceb34"
                android:gravity="center"
                android:text="Notes/Journal"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/therapistListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eb9234"
                android:gravity="center"
                android:text="Therapist List"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/emergencyContactListButtonClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0a912e"
                android:gravity="center"
                android:text="Emergency Contact List"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>